<h1><%= @book.title %></h1>

  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>Page Number:</strong>
  <%= @book.page_number %>
</p>

<p>
  <strong>Read:</strong>
  <%= @book.read ? 'Yes' : 'No' %>
</p>

<p>
  <strong>Rating:</strong>
  <% if @book.rating.present? %>
    <%= @book.rating %> star<%= 's' if @book.rating > 1 %>
  <% else %>
    No rating yet
  <% end %>
</p>




<%= link_to 'Edit', edit_book_path(@book), class: "button" %> |

<%= link_to 'Back', books_path, class: "button" %>
<br>
<br>
<!-- Form for deleting the book -->
<%= form_with(model: @book, method: :delete) do |form| %>
    <!-- Submit button to delete the book with a confirmation prompt -->
    <%= form.submit 'Destroy',  data: { confirm: 'Are you sure you want to delete this book?' } %>
<% end %>