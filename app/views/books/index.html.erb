<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <!-- Personalized greeting for the logged-in user -->
    <% if user_signed_in? %>
      <h1>Welcome to Book Tracker, <%= current_user.name %> </h1>
      <p>Track all the books you've read and keep your collection organized!</p>
    <% else %>
      <h1>Welcome to Book Tracker</h1>
      <p>Sign in to track all the books you've read and keep your collection organized!</p>
    <% end %>
    <!-- Button to navigate to the "Add New Book" page -->
    <a href="/books/new" class="add-book-btn">Add a New Book</a>
  </div>
</section>

<!-- User Books Section (Only visible if the user is signed in) -->
<% if user_signed_in? %>
  <h1>ðŸ“š Currently Reading </h1>
  <% if @books.currently_reading.any? %>
    <!-- Loop through and render each book using a partial -->
    <% @books.currently_reading.each do |book| %>
      <%= render 'book_card', book: book %>
    <% end %>
  <% else %>
    <!-- Message displayed if the user has no books in their collection -->
    <p>You are not currently reading any books</p>
  <% end %>

  <!-- Button to add a new book -->
  <%= link_to "Add a New Book", new_book_path, class: "add-book-btn" %>
<% else %>
  <!-- Message prompting users to sign in -->
  <p>Sign in to track your reading progress!</p>
<% end %>