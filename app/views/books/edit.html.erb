<h1>Edit Book</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :page_number %>
    <%= form.number_field :page_number %>
  </div>

  <div class="field">
    <%= form.label :read %>
    <%= form.check_box :read %>
  </div>

  <div class="field">
    <%= form.label :currently_reading %>
    <%= form.check_box :currently_reading %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.select :rating, options_for_select([1, 2, 3, 4, 5], @book.rating), { include_blank: "Select Rating" } %>
  </div>

  <div class="field">
    <%= form.label :total_pages %>
    <%= form.number_field :total_pages %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', books_path %> 

