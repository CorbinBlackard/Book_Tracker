<div class="container mt-5">
	<div class="form-card">
		<h2 class="form-title">Add or Edit Book</h2>

		<%= form_with(model: book, local: true) do |form| %>

			<% if book.errors.any? %>
			<div id="error_explanation" class="alert-box">
				<h5><%= pluralize(book.errors.count, "error") %> prevented saving:</h5>
				<ul>
					<% book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="form-grid">
				<div>
					<%= form.label :title, class: "form-label" %>
					<%= form.text_field :title, class: "form-input", placeholder: "Book title" %>
				</div>

				<div>
					<%= form.label :author, class: "form-label" %>
					<%= form.text_field :author, class: "form-input", placeholder: "Author name" %>
				</div>

				<div>
					<%= form.label :genre, class: "form-label" %>
					<%= form.text_field :genre, class: "form-input", placeholder: "Genre" %>
				</div>

				<div>
					<%= form.label :page_number, "Current Page", class: "form-label" %>
					<%= form.number_field :page_number, class: "form-input" %>
				</div>

				<div>
					<%= form.label :total_pages, class: "form-label" %>
					<%= form.number_field :total_pages, class: "form-input" %>
				</div>

				<div class="checkbox-group">
					<label class="checkbox-item">
						<%= form.check_box :read, class: "form-checkbox" %> Read
					</label>
					<label class="checkbox-item">
						<%= form.check_box :currently_reading, class: "form-checkbox" %> Currently Reading
					</label>
				</div>
					
				<% if @finished_books == true %>	
					<div>
						<%= form.label :rating, class: "form-label" %>
						<%= form.select :rating, options_for_select([1, 2, 3, 4, 5], book.rating), { include_blank: "Select Rating" }, class: "form-select" %>
					</div>
				<%end%>
			</div>

			<div class="form-actions">
				<%= form.submit "Save Book", class: "button form-button" %>
			</div>

		<% end %>
	</div>
</div>